<% content_for :title do %>
    アカウント詳細
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <!-- form start -->
      <form role="form">
        <div class="card-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" class="form-control" id="name" placeholder="Enter name" value="<%= @user.name %>" disabled>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email" value="<%= @user.email %>" disabled>
          </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
          <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %>
          <%= link_to 'Back', users_path, class: 'btn btn-default float-right' %>
        </div>
      </form>
    </div>
  </div>
</div>

